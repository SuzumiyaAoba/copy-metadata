{
  "manifest_version": 3,
  "name": "Copy metadata",
  "version": "0.0.1",
  "action": { "default_popup": "src/popup/index.html" },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ]
}
